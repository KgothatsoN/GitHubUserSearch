@model GitHubUserSearch.Models.GitHubViewModel
@{
    Layout = "_Layout.cshtml";
    ViewBag.Title = "GitHub User Result";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Result</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div>
        <hr />
        <div class="d-flex flex-column align-items-center mt-5">
            <img src="@Model.User.Avatar_Url" alt="Avatar" class="rounded-circle mb-3" width="120" />
            <h3>@Model.User.Name (@Model.User.Name)</h3>
            <p class="text-muted">@Model.User.Location</p>
        </div>

        @if (Model.TopRepositories != null && Model.TopRepositories.Any())
        {
            <div class="mt-5 w-100 d-flex justify-content-center">
                <div class="table-responsive" style="max-width: 900px; width: 100%;">
                    <h4 class="text-center mb-3">Top 5 Repositories</h4>
                    <table class="table table-striped text-start">
                        <thead class="table-light">
                            <tr>
                                <th>Name</th>
                                <th>Description</th>
                                <th>Stars</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var repo in Model.TopRepositories)
                            {
                                <tr>
                                    <td><a href="@repo.HtmlUrl" target="_blank">@repo.Name</a></td>
                                    <td>@repo.Description</td>
                                    <td>@repo.Stargazers_Count</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        }
        else
        {
            <div class="text-center mt-4">
                <p>This user has no repositories.</p>
            </div>
        }
    </div>
</body>
</html>
