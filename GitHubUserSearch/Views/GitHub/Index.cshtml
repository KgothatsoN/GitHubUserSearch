@model GitHubUserSearch.Models.GitHubViewModel
@{
    Layout = "_Layout.cshtml";
    ViewBag.Title = "GitHub User Search";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

</head>
<body>

    <style>
        body {
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        .search-section {
            flex: 1;
            display: flex;
            flex-direction: column;
            justify-content: flex-end;
            align-items: center;
            padding-bottom: 10vh;
        }

        .github-logo {
            width: 100px;
            margin-bottom: 30px;
        }

        .form-box {
            width: 100%;
            max-width: 400px;
        }
    </style>

    <div class="container text-center">
        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="alert alert-danger mt-2">@Model.ErrorMessage</div>
        }
        <div class="search-section">
            <img src="https://github.githubassets.com/images/modules/logos_page/GitHub-Mark.png" alt="GitHub Logo" class="github-logo" />

            @using (Html.BeginForm("SearchAsync", "GitHub", FormMethod.Post, new { @class = "form-box" }))
            {
                <div class="input-group mb-3">
                    @Html.TextBoxFor(m => m.User.Name, new { @class = "form-control", placeholder = "Enter GitHub username" })
                    <button type="submit" class="btn btn-dark">Search</button>
                </div>
            }


        </div>
    </div>
</body>
</html>
